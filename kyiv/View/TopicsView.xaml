    <ScrollView  >
        <VerticalStackLayout Margin="0,10" >
            <Grid ColumnDefinitions="*" RowDefinitions="Auto, Auto,Auto,Auto, Auto, *"  RowSpacing="12" Padding="10" Background="White">
                <Border Margin="5, 2"  Grid.Row="0" Grid.Column="0">
                    <Label Text="Task №1" FontSize="20" HorizontalOptions="Start">
                    </Label>
                </Border>
                <Border Margin="5, 2"  Grid.Row="2" Grid.Column="0">
                    <Label Text="{Binding TaskText}" FontSize="20" HorizontalOptions="Start"/>
                </Border>
                <Border Margin="5, 2"  Grid.Row="5" Grid.Column="0">
                    <Button CornerRadius="20" Text="Go to task" FontSize="15" TextColor="White" Style="{StaticResource LGradientBorder}" 
                            HorizontalOptions="Center" VerticalOptions="End"
                            Command="{Binding LevelSelectedCommand}" CommandParameter="pvp">
                    </Button>
                </Border>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>


