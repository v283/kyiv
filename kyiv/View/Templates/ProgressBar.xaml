<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kyiv.View.Templates.ProgressBar" WidthRequest="450">

    <Grid Padding="20">
        <CollectionView ItemsSource="{Binding Days}" HorizontalScrollBarVisibility="Never" HorizontalOptions="Center" >
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="22"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout HorizontalOptions="Center">
                        <Border WidthRequest="30" HeightRequest="100"  Stroke="Gray" BackgroundColor="White"
                               StrokeShape="RoundRectangle 40" Padding="0">
                            <Grid>
                                <BoxView Color="DarkOrange"
                                         VerticalOptions="End"
                                         HeightRequest="{Binding Level, Converter={StaticResource PercentageToHeightConvert}}"/>
                            </Grid>
                        </Border>
                        <Label Text="{Binding Name}" FontSize="14" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentView>
