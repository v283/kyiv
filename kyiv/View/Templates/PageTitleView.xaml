<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="kyiv.View.Templates.PageTitleView">
        <Border BindingContext="{x:Reference this}" Background="{Binding TitleBackgroundColor}" StrokeThickness="0" StrokeShape="RoundRectangle 13"  Margin="10"  HeightRequest="40">
            <Grid ColumnDefinitions="auto, 6*" RowDefinitions="*">

                <Image  Margin=" 10,0,0,0" Source="menus.png" HeightRequest="30" VerticalOptions="Center"  HorizontalOptions="Start" Grid.Row="0" Grid.Column="0" >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OpenFlyoutAsync" />
                    </Image.GestureRecognizers>
                </Image>
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Text}"  FontFamily="RammettoOne" FontSize="{Binding FontSize}" FontAttributes="None"
                   TextColor="{Binding TextColor}"  HorizontalOptions="Center"  VerticalTextAlignment="Center"/>
            </Grid>

        </Border>
</ContentView>

