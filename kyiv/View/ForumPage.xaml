<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kyiv.View.ForumPage">
    <Grid>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="*" RowDefinitions="Auto, Auto, Auto, *" RowSpacing="12" Padding="10" Background="White">
                <Border Margin="5, 2" Grid.Row="0" WidthRequest="380" HeightRequest="170"
                        HorizontalOptions="Start" VerticalOptions="Center" StrokeThickness="0"
                        StrokeShape="RoundRectangle 30" Style="{StaticResource LGradientBorder}">
                    <VerticalStackLayout Padding="10">
                        <Label Text="Name Task" FontSize="20"/>
                        <Image Source="share.png" WidthRequest="100" HeightRequest="100"/>
                        <Label Text="Task" FontSize="15"/>
                    </VerticalStackLayout>
                </Border>
                <Border Margin="5, 2" Grid.Row="1" WidthRequest="380" HeightRequest="170"
                        HorizontalOptions="Start" VerticalOptions="Center" StrokeThickness="0"
                        StrokeShape="RoundRectangle 30" Style="{StaticResource LGradientBorder}">
                    <VerticalStackLayout Padding="10">
                        <Label Text="Name Task" FontSize="20"/>
                        <Image Source="share.png" WidthRequest="100" HeightRequest="100"/>
                        <Label Text="Task" FontSize="15"/>
                    </VerticalStackLayout>
                </Border>
                <Border Margin="5, 2" Grid.Row="2" WidthRequest="380" HeightRequest="170"
                        HorizontalOptions="Start" VerticalOptions="Center" StrokeThickness="0"
                        StrokeShape="RoundRectangle 30" Style="{StaticResource LGradientBorder}">
                    <VerticalStackLayout Padding="10">
                        <Label Text="Name Task" FontSize="20"/>
                        <Image Source="share.png" WidthRequest="100" HeightRequest="100"/>
                        <Label Text="Task" FontSize="15"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </VerticalStackLayout>

        <ImageButton Source="check.png" WidthRequest="50" HeightRequest="50"
               HorizontalOptions="End" VerticalOptions="End" Margin="0,0,0,15"/>
    </Grid>
</ContentPage>
