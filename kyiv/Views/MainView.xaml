<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kyiv.Views.MainView"
            xmlns:local="clr-namespace:kyiv.ViewModels"
            xmlns:templates="clr-namespace:kyiv.Views.Templates">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">


            <templates:ProgressBar   />
         


            <Button
                Text="AddMob" 
                Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainViewModel}}, Path=AddMobCommand}"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

