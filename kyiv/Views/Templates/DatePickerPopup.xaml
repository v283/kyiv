<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="kyiv.Views.Templates.DatePickerPopup"  Color="Transparent"  Size="300,250">

    <Border StrokeShape="RoundRectangle 10" BackgroundColor="White" >
        <VerticalStackLayout  Margin="20" Spacing="10"  >

            <Image  HeightRequest="20" HorizontalOptions="Start" Source="close.png">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CloseCommand}"/>

                </Image.GestureRecognizers>
                <Image.Behaviors>
                    <toolkit:IconTintColorBehavior TintColor="#512BD4"/>
                </Image.Behaviors>

            </Image>

            <Label HorizontalOptions="Center" Text="Виберіть дату:" FontSize="18" />
            <DatePicker WidthRequest="90" HorizontalOptions="Center"  x:Name="datePicker" />


            <Button Margin="20" FontSize="16" Text="Зберегти" Command="{Binding SaveCommand}" />
        </VerticalStackLayout>
    </Border>

</toolkit:Popup>