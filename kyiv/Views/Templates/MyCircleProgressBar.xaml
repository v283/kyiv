<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kyiv.Views.Templates.MyCircleProgressBar"
    xmlns:drawables="clr-namespace:kyiv.Views.Templates.Drawables"
    x:Name="this">

    <GraphicsView>
        <GraphicsView.Drawable>
            <drawables:MyCircularProgressBarDrawable
                Done="{Binding Done, Source={x:Reference this}}"
                Total="{Binding Total, Source={x:Reference this}}"
                FontZoom="{Binding FontZoom, Source={x:Reference this}}"
                TextStyle="{Binding TextStyle, Source={x:Reference this}}"
                Size="{Binding Size, Source={x:Reference this}}"
                TextColor="{Binding TextColor, Source={x:Reference this}}"
                Thickness="{Binding Thickness, Source={x:Reference this}}"
                ProgressColor="{Binding ProgressColor, Source={x:Reference this}}"
                ProgressLeftColor="{Binding ProgressLeftColor, Source={x:Reference this}}"/>
        </GraphicsView.Drawable>
    </GraphicsView>

</ContentView>

