<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="kyiv.Views.Templates.LoginPopup" Size="310, 430" Color="Transparent" >

    <Border StrokeShape="RoundRectangle 10" BackgroundColor="White" >
        <VerticalStackLayout >
            <Image Margin="10,10,0,0" HeightRequest="20" HorizontalOptions="Start" Source="close.png">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CloseCommand}"/>

                </Image.GestureRecognizers>
                <Image.Behaviors>
                    <toolkit:IconTintColorBehavior TintColor="#43b02a"/>
                </Image.Behaviors>

            </Image>

            <Label HorizontalOptions="Center" TextColor="#43b02a" FontSize="19" FontAttributes="Bold"  Text="Login"/>

            <Border Margin="10" StrokeShape="RoundRectangle 10">
                <Entry x:Name="loginEntry" Margin="15, 0" Placeholder="Email Or Phone number"/>
            </Border>

            <Border Margin="10,0,10,10" StrokeShape="RoundRectangle 10" >
                <Entry x:Name="paswEntry" Margin="15, 0"  IsPassword="True" Placeholder="Password"/>
            </Border>


            <Label HorizontalOptions="End" TextColor="#79B728" Text="Forgot your password" Margin="0, 0,20,20"/>

            <Button Clicked="OnLogin" BackgroundColor="#43b02a"  Margin="10" Text="Login"/>

            <Label Margin="5" HorizontalOptions="Center" Text="Or Login with"/>

            <Grid Padding="5" ColumnDefinitions="*, *,*" RowDefinitions="*">
                <Image Source="google.png" Grid.Column="0" Grid.Row="0"  HeightRequest="35"/>
                <Image Source="facebook.png" Grid.Column="1" Grid.Row="0"  HeightRequest="35"/>
                <Image Source="github.png" Grid.Column="2" Grid.Row="0"  HeightRequest="35"/>
            </Grid>

            <Label HorizontalOptions="Center" Margin="10">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Don't have account?" />

                        <Span Text=" Sign up"  TextColor="#79B728"
                  TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer  Tapped="OnSignUp"/>
                            </Span.GestureRecognizers>
                        </Span>

                    </FormattedString>

                </Label.FormattedText>





            </Label>
        </VerticalStackLayout>


    </Border>



</toolkit:Popup>
