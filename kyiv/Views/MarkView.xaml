<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kyiv.Views.MarkView"
             xmlns:model="clr-namespace:kyiv.Models"
             xmlns:templates="clr-namespace:kyiv.Views.Templates"
             Title="Відгуки">

    <Grid>
        <!-- CollectionView для відображення списку коментарів -->
        <CollectionView ItemsSource="{Binding Comments}"
                        SelectionMode="None"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill">

            <!-- Шаблон для кожного коментаря -->
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:MarkModel">
                    <templates:MarkMessageItemTemplate />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Кнопка для додавання нового коментаря -->
        <Button Text="Написати відгук"
                Command="{Binding WriteCommentCommand}"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"
                BackgroundColor="Blue"
                TextColor="White"
                CornerRadius="10"
                Padding="10" />
    </Grid>
</ContentPage>