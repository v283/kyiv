<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kyiv.Views.MarkView"
             x:Name="Root"
             xmlns:model="clr-namespace:kyiv.Models"
             xmlns:templates="clr-namespace:kyiv.Views.Templates"
             Title="Відгуки">

    <!-- Додаємо ресурси для кольорів -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="DarkBackgroundColor">Black</Color>
            <Color x:Key="WhiteBackgroundColor">#66A5AD</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid BackgroundColor="{AppThemeBinding Light={StaticResource WhiteBackgroundColor}, Dark={StaticResource DarkBackgroundColor}}">

        <!-- Анімація завантаження -->
        <ActivityIndicator IsRunning="{Binding IsLoading}" 
                           IsVisible="{Binding IsLoading}"
                           Color="Blue"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

        <!-- ScrollView для плавної прокрутки -->
        <ScrollView x:Name="MainScrollView"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    IsVisible="{Binding IsNotLoading}"
                    BackgroundColor="Transparent">
            <StackLayout BindableLayout.ItemsSource="{Binding Comments}"
                         BackgroundColor="Transparent">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="model:MarkModel">
                        <!-- Вміст елементу списку -->
                        <templates:MarkMessageItemTemplate />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>

            <!-- Додаємо жест для обробки свайпів у сторони -->
            <ScrollView.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnPanUpdated" />
            </ScrollView.GestureRecognizers>
        </ScrollView>

        <!-- Кнопка для написання відгуку -->
        <Button Text="Написати відгук"
                Command="{Binding WriteCommentCommand}"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"
                BackgroundColor="{AppThemeBinding Light=Blue, Dark=DarkBlue}"
                TextColor="White"
                CornerRadius="10"
                Padding="10"
                IsVisible="{Binding IsNotLoading}" />
    </Grid>
</ContentPage>