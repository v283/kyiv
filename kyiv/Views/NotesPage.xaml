<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kyiv.Views.NotesPage"
             xmlns:model="clr-namespace:kyiv.Models"
             xmlns:templates="clr-namespace:kyiv.Views.Templates"
             Title="Усі нотатки">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="DarkBackgroundColor">Black</Color>
            <Color x:Key="WhiteBackgroundColor">#c3c3df</Color>
            <Color x:Key="DarkTextColor">#FFFFFF</Color>
            <Color x:Key="WhiteTextColor">#000000</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid BackgroundColor="{AppThemeBinding Light={StaticResource WhiteBackgroundColor}, Dark={StaticResource DarkBackgroundColor}}">

        <CollectionView ItemsSource="{Binding Notes}"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        x:Name="NotesListView"
                        BackgroundColor="Transparent">

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:MarkModel">
                    <templates:NoteItemTemplate />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Створити нотатку"
                Clicked="OnCreateNoteClicked"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"
                BackgroundColor="{AppThemeBinding Light=Blue, Dark=DarkBlue}"
                TextColor="{AppThemeBinding Light={StaticResource DarkTextColor}, Dark={StaticResource DarkTextColor}}"
                CornerRadius="10"
                Padding="10" />
    </Grid>
</ContentPage>