<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kyiv.Views.NoteDetailPage"
             Title="NoteDetailPage">

    <Grid Padding="15" ColumnSpacing="20" RowSpacing="15"
          RowDefinitions="Auto, Auto, *">
        <Button Grid.Row="0"
                Text="Зберегти зміни"
                    Clicked="OnSaveChangesClicked"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"/>


        <Entry Grid.Row="1"
            x:Name="NameEntry"
                   Placeholder="Назва нотатки"
                   Text="{Binding Name}"/>

        <Editor Grid.Row="2"
                x:Name="TextEditor"
                Placeholder="Text нотатки..."
                AutoSize="TextChanges"
                Text="{Binding Text}"
/>

    </Grid>
    
    
</ContentPage>