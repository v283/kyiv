    xmlns:views="clr-namespace:kyiv.Views">

    <TabBar>

        <ShellContent Title="Головна"
                     Icon="home.png" 
                     ContentTemplate="{DataTemplate views:MainView}"/>
        <ShellContent Title="Словник" 
                     Icon="dictionary_light.png"
                     ContentTemplate="{DataTemplate views:DictionaryView}" />
        <ShellContent Title="Коменти" 
                     Icon="comments.png" 
                     ContentTemplate="{DataTemplate views:MarkView}" />
        <ShellContent Title="Обрані"
                     Icon="like.png"
                     ContentTemplate="{DataTemplate views:MainView}" />
