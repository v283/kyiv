<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="kyiv.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:kyiv.Views">

    <TabBar>

        <ShellContent Title="Головна"
                     Icon="home.png" 
                     ContentTemplate="{DataTemplate views:MainView}"/>
        <ShellContent Title="Рецепти" Route="recipeview"
                     Icon="home.png"
                     ContentTemplate="{DataTemplate views:MainView}" />
        <ShellContent Title="Коменти" Route="catalogview"
                     Icon="home.png" 
                     ContentTemplate="{DataTemplate views:MarkView}" />
        <ShellContent Title="Обрані" Route="cartview"
                     Icon="home.png"
                     ContentTemplate="{DataTemplate views:MainView}" />
        <ShellContent Title="Мій акаунт" Route="accoutviewpage"
                     Icon="user.png"
                     ContentTemplate="{DataTemplate views:AccountView}" />


    </TabBar>
</Shell>

