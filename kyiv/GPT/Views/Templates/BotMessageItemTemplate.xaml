<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<Grid
    x:Class="ChatGPT.Views.Templates.BotMessageItemTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:ChatGPT.Models"
    x:DataType="model:Message"
    ColumnDefinitions="Auto, 10, Auto, *"
    RowDefinitions="Auto"
    SizeChanged="ParentGrid_SizeChanged">

    <Border
        x:Name="borderText"
        Grid.Column="2" Grid.Row="0"
        Padding="12"
                BackgroundColor="{AppThemeBinding Light={StaticResource TertiaryLight},
                                          Dark={StaticResource TertiaryDark}}"

        StrokeShape="{OnPlatform WinUI='RoundRectangle 4,4,0,4',
                                 MacCatalyst='RoundRectangle 4,4,0,4',
                                 Default='RoundRectangle 16,16,0,16'}"
        StrokeThickness="0">
        <StackLayout>
            <Label
                IsVisible="{Binding IsTextActive}"
                Style="{StaticResource TxtSubtitle2_2}"
                Text="{Binding Text}" />
        </StackLayout>
    </Border>

    <Border
        x:Name="borderImage"
        Grid.Column="0" Grid.Row="0"
        BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryLight},
                                          Dark={StaticResource PrimaryDark}}"
        HeightRequest="35"
        StrokeShape="RoundRectangle 5,5,0,5"
        StrokeThickness="0"
        VerticalOptions="End"
        WidthRequest="35">

        <Image
            HeightRequest="30"
            Source="{AppThemeBinding Light=jack_bot_light.png,
                                          Dark=jack_bot_dark.png}"
            WidthRequest="30" />
    </Border>

</Grid>
