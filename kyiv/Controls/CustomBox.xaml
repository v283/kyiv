<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kyiv.Controls.CustomBox"
             xmlns:drawables="clr-namespace:kyiv.Controls.Drawables"
             x:Name="this">
    <GraphicsView>
        <GraphicsView.Drawable>
            <drawables:CustomBoxDrawable
                Size="{Binding Size, Source={x:Reference this}}"
                Thickness="{Binding Thickness, Source={x:Reference this}}"
                LineLength="{Binding LineLength, Source={x:Reference this}}"
                CornerRadius="{Binding CornerRadius, Source={x:Reference this}}"
                StrokeColor="{Binding StrokeColor, Source={x:Reference this}}"
                IsDoneText="{Binding IsDoneText, Source={x:Reference this}}"
                BoxBackgroundColor="{Binding BoxBackgroundColor, Source={x:Reference this}}"/>

        </GraphicsView.Drawable>
    </GraphicsView>
</ContentView>

